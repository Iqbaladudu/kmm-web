# ============================================================================
# Docker Environment Variables for Production Deployment
# ============================================================================
# Copy this file to .env and update with your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Django Core Settings
# ----------------------------------------------------------------------------
DJANGO_ENV=production
SECRET_KEY=your-very-secure-secret-key-here-minimum-50-characters-CHANGE-THIS-IN-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL via Docker)
# ----------------------------------------------------------------------------
# Note: These are used by docker-compose to create the database
POSTGRES_DB=kmm_web_db
POSTGRES_USER=kmm_user
POSTGRES_PASSWORD=changeme_secure_password_here

# DATABASE_URL is constructed automatically in docker-compose
# Format: postgresql://user:password@host:port/dbname
# But you can override it if needed:
# DATABASE_URL=postgresql://kmm_user:changeme_secure_password_here@postgres:5432/kmm_web_db

# ----------------------------------------------------------------------------
# Redis Configuration (via Docker)
# ----------------------------------------------------------------------------
# REDIS_URL is set automatically in docker-compose
# But you can override it:
# REDIS_URL=redis://redis:6379/1

# ----------------------------------------------------------------------------
# Email Configuration
# ----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@kmm-mesir.org

# ----------------------------------------------------------------------------
# Admin Configuration
# ----------------------------------------------------------------------------
ADMIN_EMAIL=admin@kmm-mesir.org

# Superuser auto-creation (optional, for initial setup)
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@kmm-mesir.org
# DJANGO_SUPERUSER_PASSWORD=changeme_admin_password

# ----------------------------------------------------------------------------
# AWS S3 Configuration (Optional - for file storage)
# ----------------------------------------------------------------------------
USE_S3=False
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.com

# ----------------------------------------------------------------------------
# Monitoring & Error Tracking (Optional)
# ----------------------------------------------------------------------------
# SENTRY_DSN=your-sentry-dsn-url
# ENVIRONMENT=production

# ----------------------------------------------------------------------------
# Docker & Nginx Configuration
# ----------------------------------------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# ----------------------------------------------------------------------------
# Gunicorn Configuration (Optional - defaults are set in gunicorn.conf.py)
# ----------------------------------------------------------------------------
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=30
# GUNICORN_LOG_LEVEL=info

# ----------------------------------------------------------------------------
# Additional Settings
# ----------------------------------------------------------------------------
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

